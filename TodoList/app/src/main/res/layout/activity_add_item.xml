<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleadd"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Add new list"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timelist"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="When your deadline ?"/>

        <EditText
            android:id="@+id/time"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="What is your title of your list ?"/>

        <EditText
            android:id="@+id/title"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/planlist"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="What are you planning ?"/>

        <EditText
            android:id="@+id/plan"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="220dp"
            android:text="CREATE"
            android:background="@drawable/buttontmbh"/>
    </LinearLayout>
</LinearLayout>